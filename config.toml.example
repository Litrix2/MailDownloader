[program]
#静默下载模式
#为true时,自动执行"下载"操作,不会询问任何信息,且在操作结束后自动退出
#推荐搭配日志功能使用
silent_download_mode = false

#输出日志;若不需要,设为false
log = false
#path: 日志输出文件夹路径; relative_to_program: 路径相对于程序/工作目录; overwrite: 是否覆写文件(覆写/追加)
# log={path='',relative_to_program=true,overwrite=false}

[mail]
#邮箱数据
#host: IMAP服务器地址; address: 邮箱地址; password:邮箱授权码(密码)
user_data = [
    { host = 'imap.example1.com', address = 'mail1@example1.com', password = 'your_password1' },
    { host = 'imap.example1.com', address = 'mail2@example2.com', password = 'your_password2' },
    { host = 'imap.example2.com', address = 'mail3@example3.com', password = 'your_password3' },
]

[search]
#检索的邮件文件夹;留空为默认文件夹(INBOX)
#可以使用"查看邮箱文件夹"命令来查看文件夹名称
mailbox = []
# mailbox=[[],#mail1
# ['草稿箱','INBOX'],#mail2
# []]#mail3

#仅搜索未读邮件
only_search_unseen_mails = true

[search.date]
#手动输入检索日期;仅在silent_download_mode为false时生效
manual_input_search_date = true

#起始搜索日期([年,月,日]);若不需要,设为[]
#当manual_input_search_date为true时,作为缺省值
min_search_date = []

#截止搜索日期([年,月,日]);若不需要,设为[]
#当manual_input_search_date为true时,作为缺省值
max_search_date = []

#搜索过滤器
#开启后可能会略微降低处理速度
[search.filter]
#按照发件人进行过滤;若不需要,设为[]
#支持正则表达式(多个表达式关系为或)
sender = [[['mail1_sender_nickname1'],[],['mail3_sender_nickname1'],'deafult_mail_sender_nickname'],[['mail1_sender_address'],'deafult_mail_sender_address']]

#按照主题进行过滤;若不需要,设为[]
#支持正则表达式(多个表达式关系为或)
subject = [['mail1_subject1'],[],[]]

[download]
#下载线程数
#适量配置
thread_count=8

#当邮件中任意附件下载错误时,删除该邮件中所有已下载的附件
rollback_when_download_failed = true

#在成功下载附件后对该邮件设置已读标签
sign_unseen_tag_after_downloading = true

#断开连接后最大重连次数
reconnect_max_times = 3

[download.path]
#下载默认路径
#path: 下载文件夹路径; relative_to_program: 路径相对于程序/工作目录
deafult={path='path',relative_to_program=true}

#按照MIME-TYPE选择不同下载路径;若不需要,设为[]
#type: MIME-TYPE类型; path: 下载文件夹路径; relative_to_download_path: 路径相对于下载目录/工作目录
#支持正则表达式(多个表达式关系为或)
mine_type_classfication=[
    {type=[''],path='path',relative_to_download_path=true}
]

#按照文件名选择不同下载路径;若不需要,设为[]
#name: 匹配名(扩展名不需要写.号); extenstion: 匹配名为扩展名/文件名; path: 下载文件夹路径; relative_to_download_path: 路径相对于下载目录/工作目录
#优先级高于按MIME-TYPE分类
#支持正则表达式(多个表达式关系为或)
file_name_classfication=[
    {name=['name1','name2'],extenstion=false,path='path',relative_to_download_path=true},
    {name=['ext1','ext2'],extenstion=true,path='path',relative_to_download_path=true}
]